{
  "name": "Speech to image [WIP]",
  "version": "v0.0.0",
  "emoji": "ðŸŽ¤",
  "description": "voice input demo",
  "tags": ["SDXL", "S2I"],
  "formConfig": [
    {
      "group": "Prompt",
      "id": "positivePrompt",
      "label": "Positive Prompt",
      "type": "speech",
      "defaultValue": "",
      "colSpan": 2
    },
    {
      "group": "Generation params",
      "id": "size",
      "label": "Size",
      "type": "select",
      "defaultValueIndex": 0,
      "options": [
        {
          "label": "1:1 Square",
          "value": { "width": 512, "height": 512 }
        },
        {
          "label": "16:9 Landscape",
          "value": { "width": 768, "height": 512 }
        },
        {
          "label": "16:9 Portrait",
          "value": { "width": 512, "height": 768 }
        }
      ]
    },
    {
      "group": "Generation params",
      "id": "seed",
      "label": "Seed",
      "type": "number",
      "defaultValue": 1337,
      "min": 0,
      "onChange": { "enableSeedRandomisation": false }
    },
    {
      "group": "Generation params",
      "id": "enableSeedRandomisation",
      "label": "Seed Control",
      "type": "checkbox",
      "defaultValueIndex": 0,
      "options": [
        { "label": "Random", "value": false },
        { "label": "Random", "value": true }
      ]
    }
  ],
  "adapterConfig": [
    {
      "destination": "Positive Prompt > text",
      "actions": "get:positivePrompt"
    },
    {
      "destination": "EmptyLatentImage > width",
      "actions": "get:width"
    },
    {
      "destination": "EmptyLatentImage > height",
      "actions": "get:height"
    },
    {
      "destination": "KSampler > seed",
      "actions": "get:seed"
    }
  ]
}
